{
    "compileOnSave": true,
    "compilerOptions": {
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "strict": true,
        "importHelpers": true,
        "noUnusedLocals": false,
        "noImplicitReturns": true,
        "removeComments": true,
        "module": "ES6",
        "outDir": "./dist",
        "target": "ES2020",
        "baseUrl": "jsb-js",
        "lib": ["ES2019", "DOM"]
    },
    "include": ["./src/**/*"]
}